<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/books_you_have_coverImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/background_gray_stroke_radius_8"
        android:contentDescription="책 표지"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/logo"/>

    <TextView
        android:id="@+id/books_you_have_bookNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/books_you_have_coverImageView"
        tools:text="안드로이드 마스터하기" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@color/carrot"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/books_you_have_bookNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/books_you_have_coverImageView"
        android:text="판매하기"
        android:textColor="@color/white"
        android:id="@+id/books_you_have_sellBtn"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginStart="15dp"
        android:background="@color/carrot"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/books_you_have_sellBtn"
        app:layout_constraintBottom_toBottomOf="@id/books_you_have_coverImageView"
        android:text="삭제하기"
        android:textColor="@color/white"
        android:id="@+id/books_you_have_delBtn"
        />



</androidx.constraintlayout.widget.ConstraintLayout>